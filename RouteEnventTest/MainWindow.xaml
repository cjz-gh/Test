<Window x:Class="RouteEnventTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RouteEnventTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="g1" Background="LightBlue">
        <Grid Name="g2" Margin="10" Background="Beige">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas Name="c1" Grid.Column="0" Background="Black" Margin="10">
                <Button Name="b1" Content="b1" Width="40" Height="100" Margin="10"></Button>
            </Canvas>
            <Canvas Name="c2" Grid.Column="1" Background="White" Margin="10">
                <Button Name="b2" Content="b2" Width="40" Height="100" Margin="10"></Button>
            </Canvas>
        </Grid>
        <Button Name="b3" Content="b3" Width="100" Height="40" Click="b3_Click"></Button>
    </Grid>
</Window>
