<UserControl x:Class="ModelTest1.CarlistItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelTest1"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal">
        <Image x:Name="imagePhoto" Width="400" Height="250" ></Image>
        <StackPanel Orientation="Horizontal" Margin="5,0">
            <TextBlock Text="name:" FontSize="20" FontWeight="Bold"></TextBlock>
            <TextBlock Name="Name" FontSize="20" Margin="5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
